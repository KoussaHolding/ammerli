{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/ammerli.e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!(uuid|@nestjs/common|@nestjs/core))"
  ],
  "setupFiles": ["<rootDir>/setup-jest.mjs"],
  "testTimeout": 60000
}
